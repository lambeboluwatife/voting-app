<%- include ('../partials/header') %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 style="text-align: center;">Edit <%= election.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
          <form action="/elections/<%= election._id %>?_method=PUT" method="POST">

            <div class="form-group">
              <input
              class="form-control"
              type="text"
              name="election[title]"
              value="<%= election.title %>">
            </div>

            <div class="form-group">
              <input
              class="form-control"
              type="text"
              name="election[type]"
              value="<%= election.type %>">
            </div>

            <div class="form-group">
              <input
              class="form-control"
              type="text"
              name="election[description]"
              value="<%= election.description %>">
            </div>

            <div class="form-group">
              <input
              class="form-control"
              type="number"
              name="election[candidates]"
              value="<%= election.candidates %>">
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>

          </form>

          <a href="/elections">Go Back!</a>

        </div>
      </div>
    </div>
  </div>
<%- include ('../partials/footer') %>
