<%- include ('../partials/header') %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add Candidate to <%= election.title %></h1>
    <h3 style="text-align: center;"><%= election.type %></h3>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/elections/<%= election._id %>/candidates" method="POST">

        <div class="form-group">
          <label for="Candidate Name">
            <input class="form-control" type="text" name="name" placeholder="Candidate Name">
          </label>
        </div>

        <div class="form-group">
          <label for="About Candidate">
            <input class="form-control" type="text" name="about" placeholder="About Candidate">
          </label>
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add</button>
        </div>

      </form>
      <a href="/campgrounds">Go Back!</a>
    </div>

  </div>

</div>
<%- include ('../partials/footer') %>
